{% block body %}
<div style="display: flex;align-items: center;justify-content: center;margin-top: 200px;padding: 30px;">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"> Ajouter Blog</h5>

              <!-- General Form Elements -->
              {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
               
                  <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
